<section class="recipePublic">
  <div class="recipesList">
    <% @recipes.each do |recipe| %>
        <div class="recipeList_recipe" id="<%= dom_id recipe %>">
          <div class="recipeList_recipe_left">
            <%= link_to recipe, :action => 'go' do %>
              <h2><%= recipe.name %></h2>
            <% end %>
            <h3>By <%= recipe.user.name %></h3>
          </div>
          <div class="recipeList_recipe_rigth">
            <p>Total Ingredients: <%= recipe.total_food %></p>
            <p>Total Price: $<%= recipe.total_price %></p>
          </div>
        </div>
    <% end %>
  </div>
</section>